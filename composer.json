{
    "name": "raffaelecarelle/php-error-insight",
    "description": "AI-powered helper for PHP errors, warnings and exceptions: practical, context-aware explanations and suggestions via local or API LLMs.",
    "type": "library",
    "license": "GPL-3.0-or-later",
    "require": {
        "php": ">=8.1",
        "symfony/var-dumper": "^5.0|^6.0|^7.0",
        "ext-curl": "*"
    },
    "autoload": {
        "psr-4": {
            "PhpErrorInsight\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PhpErrorInsight\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Raffaele Carelle",
            "email": "raffaele.carelle@gmail.com"
        }
    ],
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.86",
        "phpunit/phpunit": "^10.0",
        "rector/rector": "^1.0",
        "phpstan/phpstan": "^1.10"
    },
    "scripts": {
        "cs-check": "php-cs-fixer fix --config=.php-cs-fixer.dist.php --dry-run --diff --verbose",
        "cs-fix": "php-cs-fixer fix --config=.php-cs-fixer.dist.php --verbose",
        "rector-check": "rector --dry-run",
        "rector-fix": "rector",
        "phpstan": "phpstan analyse",
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html var/coverage",
        "quality": [
            "@cs-check",
            "@rector-check",
            "@phpstan",
            "@test"
        ],
        "fix-all": [
            "@cs-fix",
            "@rector-fix"
        ]
    }
}
